attributetype ( 1.3.6.1.4.1.12461.1.1.32
	NAME ( 'answer' )
	DESC 'The answer to the password recovery question'
	EQUALITY caseIgnoreMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.15{1024}
	SINGLE-VALUE )
