	SYNTAX 1.3.6.1.4.1.1466.115.121.1.26
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.12461.1.1.30
	NAME ( 'disablePasswdChange' )
	DESC 'Disable Password modification for user or not (0|1)'
	EQUALITY caseExactIA5Match
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.26
