attributetype ( 1.3.6.1.4.1.12461.1.1.31
	NAME ( 'question' )
	DESC 'The question for password recovery'
	EQUALITY caseIgnoreMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.15{1024}
