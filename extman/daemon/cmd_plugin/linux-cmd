####################
# FastCGI server   #
####################

sub fcgi_status {
    my $ctx = shift;
    my $rc = qx/ps ax|grep dispatch.fcgi|grep -v grep/;
    if ($rc =~ /dispatch\.fcgi \(master\)/) {
        $ctx->set_reply('250', 'up');
    } else {
        $ctx->set_reply('503', 'down');
    }
}

sub fcgi_restart {
    my $ctx = shift;
    my $rc = qx/$fcgi_init restart/;
    $ctx->set_reply('250', 'Exec done');
}

sub fcgi_stop {
    my $ctx = shift;
    my $rc = qx/$fcgi_init stop/;
    $ctx->set_reply('250', 'Exec done');
}

