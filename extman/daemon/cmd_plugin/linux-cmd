####################
# OS related       #
####################

sub os_info {
    my $ctx = shift;
    my $param = shift;
    my $rc;

    if ($param) {
        if ($param eq 'os') {
            $rc = qx/uname -o/;
        }
        if ($param eq 'hostname') {
            $rc = qx/uname -n/;
        }
        if ($param eq 'kernel') {
            $rc = qx/uname -r/;
        }
        if ($param eq 'cpu') {
            $rc = qx/uname -p/;
        }
    } else {
        $rc = qx/uname/;
    }
    if (not $rc) {
        $ctx->set_reply('450', 'Temp failed');
        return;
    }
    $rc =~ s/\r?\n//g;
    $ctx->set_reply('250', $rc);
}

sub sysload {
    my $ctx = shift;
    my $param = shift;
    my $rc = qx(/usr/bin/uptime);

    $rc =~ s/\r?\n//g;
    $ctx->set_reply('250', $rc);
}

1;
